<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shiroko.mapper.CourseRecordMapper">

    <resultMap id="BaseResultMap" type="com.shiroko.repository.entity.CourseRecord">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="stuName" column="stu_name" jdbcType="VARCHAR"/>
            <result property="courseName" column="course_name" jdbcType="VARCHAR"/>
            <result property="courseTotalTime" column="course_total_time" jdbcType="INTEGER"/>
            <result property="courseRestTime" column="course_rest_time" jdbcType="INTEGER"/>
            <result property="courseLastTime" column="course_last_time" jdbcType="TIMESTAMP"/>
            <result property="courseAdminGroupId" column="couse_admin_group_id" jdbcType="INTEGER"/>
            <result property="courseOwnerUserId" column="course_owner_user_id" jdbcType="INTEGER"/>
            <result property="courseRemark" column="course_remark" jdbcType="VARCHAR"/>
            <result property="isDelete" column="is_delete" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,stu_name,course_name,
        course_total_time,course_rest_time,course_last_time,
        couse_admin_group_id,course_owner_user_id,course_remark,
        is_delete,create_time,update_time
    </sql>

    <select id="getCourseRecords" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
            from course_record
                where is_delete = '0'
                  and stu_name = #{stuName}
                  and course_name = #{courseName}

    </select>
</mapper>
